{
  "$schema": "https://raw.githubusercontent.com/ThreeMammals/Ocelot/main/src/Ocelot/Configuration/ocelot-schema.json",
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/events/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "event-service",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/events/{everything}",
      "UpstreamHttpMethod": ["Get", "Post", "Put", "Delete"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 200
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 5000,
        "TimeoutValue": 30000
      },
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "FileCacheOptions": {
        "TtlSeconds": 60,
        "Region": "events"
      },
      "ServiceName": "event-service",
      "UseServiceDiscovery": true,
      "Key": "events-route"
    },
    {
      "DownstreamPathTemplate": "/api/tickets/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ticket-service",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/tickets/{everything}",
      "UpstreamHttpMethod": ["Get", "Post", "Put", "Delete"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 50
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 5000,
        "TimeoutValue": 30000
      },
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "ServiceName": "ticket-service",
      "UseServiceDiscovery": true,
      "Key": "tickets-route"
    },
    {
      "DownstreamPathTemplate": "/api/venues/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "venue-service",
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/api/venues/{everything}",
      "UpstreamHttpMethod": ["Get", "Post", "Put", "Delete"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 100
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 5000,
        "TimeoutValue": 30000
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "ServiceName": "venue-service",
      "UseServiceDiscovery": true,
      "Key": "venues-route"
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "notification-service",
          "Port": 5004
        }
      ],
      "UpstreamPathTemplate": "/notifications/{everything}",
      "UpstreamHttpMethod": ["Get"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "ServiceName": "notification-service",
      "UseServiceDiscovery": true,
      "Key": "notifications-route"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://api-gateway:8080",
    "ServiceDiscoveryProvider": {
      "Host": "consul",
      "Port": 8500,
      "Type": "Consul",
      "PollingInterval": 10000,
      "Namespace": ""
    },
    "RateLimitOptions": {
      "DisableRateLimitHeaders": false,
      "QuotaExceededMessage": "Rate limit exceeded. Please try again later.",
      "HttpStatusCode": 429,
      "ClientIdHeader": "X-ClientId"
    },
    "QoSOptions": {
      "ExceptionsAllowedBeforeBreaking": 3,
      "DurationOfBreak": 5000,
      "TimeoutValue": 30000
    },
    "LoadBalancerOptions": {
      "Type": "RoundRobin",
      "Key": "load-balancer",
      "Expiry": 10000
    },
    "HttpHandlerOptions": {
      "AllowAutoRedirect": false,
      "UseCookieContainer": false,
      "UseTracing": true,
      "UseProxy": false
    }
  }
}
